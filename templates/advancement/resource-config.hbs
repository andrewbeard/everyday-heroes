<form autocomplete="off">
	<section class="left column">
		{{> "everydayHeroes.advancement-controls"}}
		<hr>
		<fieldset>
			<label>{{localize "EH.Advancement.ScaleValue.Type.Label"}}</label>
			<select name="configuration.type">
				{{selectOptions types selected=configuration.type}}
			</select>
			<p class="hint type-hint">
				{{localize type.hint}}
			</p>
		</fieldset>
		<fieldset>
			<label>{{localize "EH.Uses.Recovery.Period.Label"}}</label>
			<select name="configuration.recovery.period">
				{{selectOptions CONFIG.resourceRecoveryPeriods selected=configuration.recovery.period blank=""
					labelAttr="label"}}
			</select>
		</fieldset>
		<fieldset>
			<label>{{localize "EH.Uses.Recovery.Mode.Label"}}</label>
			<select name="configuration.recovery.mode">
				{{selectOptions CONFIG.recoveryModes selected=configuration.recovery.mode labelAttr="label"}}
			</select>
			<p class="hint">{{lookup (lookup CONFIG.recoveryModes configuration.recovery.mode) "hint"}}</p>
		</fieldset>
		{{!-- TODO: Implement recovery formulas
		<fieldset>
			<label>EH.Uses.Recovery.Formula.Label</label>
			<input type="text" name="configuration.recovery.formula" value="{{configuration.recovery.formula}}">
			<p class="hint"></p>
		</fieldset>
		--}}
	</section>

	<section class="right column level-list scale-values">
		<h3 class="striped">
			<span class="left stripes"></span>
			<span class="center">{{localize "EH.Advancement.ScaleValue.Values.Label"}}</span>
			<span class="right stripes"></span>
		</h3>
		{{#each levels as |data level|}}
			{{> "everydayHeroes.advancement-scale-value" data=data level=level}}
		{{/each}}
	</section>
</form>
