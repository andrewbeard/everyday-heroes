<form class="dialog-content" autocomplete="off">
	<section class="main-form">
		<ul class="formulas damage">
			{{#each rolls}}
				<li>
					<span>{{this.formula}}</span>
					{{#with (lookup (lookup @root.CONFIG.damageTypes this.options.type) "label") as |damage|}}
						<span class="damage-type">{{damage}}</span>
					{{/with}}
				</li>
			{{/each}}
		</ul>
		{{#if damageTypes}}
			<fieldset>
				<label>{{localize "EH.Damage.Type.Label[one]"}}</label>
				<select name="damageType">
					{{selectOptions damageTypes selected=selectedDamageType labelAttr="label"}}
				</select>
			</fieldset>
		{{/if}}
		<fieldset>
			<label>{{localize "EH.Dice.ExtraTerms"}}</label>
			<input type="text" name="bonus" value="{{bonus}}" placeholder="">
		</fieldset>
		<fieldset>
			<label>{{localize "EH.Dice.RollMode"}}</label>
			<select name="rollMode">
				{{selectOptions rollModes selected=default.rollMode localize=true}}
			</select>
		</fieldset>
	</section>

	<nav class="dialog-buttons skewed">
		<ul>
			{{#each buttons as |button action|}}
				<li><button data-action="{{action}}">{{{button.icon}}} {{{button.label}}}</button></li>
			{{/each}}
		</ul>
	</nav>
</form>
