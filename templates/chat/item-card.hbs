<div class="everyday-heroes item card">
  <header>
    <img src="{{item.img}}" title="{{item.name}}" width="36" height="36">
    <h3 class="item-name">{{item.name}}</h3>
  </header>

  <div class="content">
		{{#if (and chatDescription enriched.chat)}}
			{{{enriched.chat}}}
		{{else}}
    	{{{enriched.description}}}
		{{/if}}
  </div>

  <footer>
		<ul class="item-tags">
			{{#each tags as |tag|}}
				{{#unless tag.hidden}}
					<li class="{{tag.class}}" {{#if tag.tooltip}}data-tooltip="{{tag.tooltip}}"{{/if}}
						{{everydayHeroes-dataset tag.dataset}}>
						{{tag.label}}
					</li>
				{{/unless}}
			{{/each}}
		</ul>
  </footer>
</div>
{{#if rollHTML}}
	<div class="dice-rolls">
		{{{rollHTML}}}
	</div>
{{/if}}
