<section class="proficiencies">
	Equipment Proficiencies
</section>

{{#each inventory as |section id|}}
	<section data-section-id="{{id}}">
			<header>
				<h2>{{localize section.label}}</h2>
			</header>
			<ol class="item-list">
				{{#each section.items as |item|}}
					<li class="item" data-item-id="{{item.id}}">
						<h4>
							<div class="image" style="background-image: url('{{item.img}}')"></div>
							<a data-action="item" data-type="expand">{{item.name}}</a>
						</h4>
						<div>
							{{#if item.system.modes}}
								<nav class="item-modes skewed">
									<ul>
										{{#each item.system.modes as |key|}}
											{{#with (lookup @root.CONFIG.weaponModes key) as |mode|}}
												<li {{#if (eq item.system.mode key)}}class="selected"{{/if}}>
													<a data-action="item" data-type="mode" data-key="{{key}}" data-tooltip="{{mode.label}}">
														<figure style="background-image: url('{{mode.icon}}');"></figure>
													</a>
												</li>
											{{/with}}
										{{/each}}
									</ul>
								</nav>
							{{/if}}
							<nav class="actions">
								{{#if item.system.hasAttack}}
									<div class="action" data-action="roll-item" data-type="attack" data-tooltip="{{item.system.attackTooltip}}">
										<figure style="background-image: url('{{item.system.attackIcon}}');"></figure>
										<span>{{everydayHeroes-number item.system.attackMod sign=true}}</span>
									</div>
								{{/if}}
								{{#if item.system.hasDamage}}
									<div class="action" data-action="roll-item" data-type="damage" data-tooltip="{{item.system.damageTooltip}}">
										<figure style="background-image: url('{{item.system.damageIcon}}');"></figure>
										<span>{{item.system.damageFormula}}</span>
									</div>
								{{/if}}
							</nav>
							{{#if item.system.ammunition.type}}
								Ammunition
							{{/if}}
						</div>
						{{#if @root.editable}}
							<fieldset>
								<a class="{{#if item.isEquipped}}equipped{{else}}unequipped{{/if}}" data-action="item" data-type="equip"
									data-tooltip="{{#if item.isEquipped}}{{localize 'EH.Item.Action.Unequip' type=item.typeLabel}}
									{{~else}}{{localize 'EH.Item.Action.Equip' type=item.typeLabel}}{{/if}}">
									<i class="{{#if item.isEquipped}}fa-solid fa-hand{{else}}fa-regular fa-hand{{/if}}"></i>
								</a>
								<a data-action="item" data-type="edit"
									data-tooltip="{{localize 'EH.Item.Action.Edit' type=item.typeLabel}}">
									<i class="fas fa-edit"></i>
								</a>
								<a data-action="item" data-type="delete"
									data-tooltip="{{localize 'EH.Item.Action.Delete' type=item.typeLabel}}">
									<i class="fas fa-trash"></i>
								</a>
							</fieldset>
						{{else}}
							<fieldset>
								<a data-action="item" data-type="edit"
									data-tooltip="{{localize 'EH.Item.Action.View' type=item.typeLabel}}">
									<i class="fa-regular fa-eye"></i>
								</a>
							</fieldset>
						{{/if}}
					</li>
				{{/each}}
			</ol>
	</section>
{{/each}}
