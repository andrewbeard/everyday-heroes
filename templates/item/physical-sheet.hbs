<form class="{{cssClass}}" autocomplete="off">

	<header>
		<div class="image">
			<img src="{{item.img}}" data-edit="img">
		</div>
		<div class="fields">
			<fieldset class="primary">
				<label>{{localize "Name"}}</label>
				<input type="text" name="name" value="{{item.name}}">
			</fieldset>
			<fieldset>
				<label>{{localize "EH.Item.Type.Label"}}</label>
				<input value="{{#if item.system.type.label}}{{item.system.type.label}}{{else}}{{item.typeLabel}}{{/if}}" disabled>
			</fieldset>
			<fieldset>
				<div class="fields">
					<label>
						<span>{{localize "EH.Equipment.Trait.PriceLevel.Label"}}</span>
						<input type="number" name="system.price" value="{{system.price}}">
					</label>
					<label>
						<span>{{localize "EH.Equipment.Trait.Bulk.Label"}}</span>
						<input type="number" name="system.bulk" value="{{system.bulk}}">
					</label>
				</div>
			</fieldset>
		</div>
			<nav data-group="primary">
				<a data-tab="description">{{localize "EH.Item.Section.Description"}}</a>
				{{#if item.system.hasDetails}}
					<a data-tab="details">{{localize "EH.Item.Section.Details"}}</a>{{!-- TODO: Localize --}}
				{{/if}}
			</nav>
	</header>

	<main>
		<div class="tab" data-group="primary" data-tab="description">
			{{> "everydayHeroes.item-description"}}
		</div>
		{{#if item.system.hasDetails}}
			<div class="tab" data-group="primary" data-tab="details">
				{{> "everydayHeroes.physical-details"}}
			</div>
		{{/if}}
	</main>

</form>
